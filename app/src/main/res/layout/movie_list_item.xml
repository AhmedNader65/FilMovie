<?xml version="1.0" encoding="utf-8"?>
<layout    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<android.support.v7.widget.CardView
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/movie_pic_iv"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@color/cardview_dark_background"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:text="Name"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:gravity="center"
                android:textColor="#000"
                android:layout_gravity="center_horizontal"
                android:id="@+id/movie_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/rate_icon"
                        android:src="@drawable/ic_rate"
                        />
                    <TextView
                        android:layout_toRightOf="@id/rate_icon"
                        android:layout_centerVertical="true"
                        android:paddingLeft="4dp"
                        android:text="Rate 6/10"
                        android:textColor="#000"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/movie_rate_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_centerVertical="true"
                        android:id="@+id/safe_icon"
                        android:src="@drawable/ic_safe"
                        android:layout_toLeftOf="@+id/movie_adult_tv"
                        />
                    <TextView
                        android:layout_centerVertical="true"
                        android:paddingRight="4dp"
                        android:textColor="#000"
                        android:layout_alignParentRight="true"
                        android:text="+18"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/movie_adult_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>
</LinearLayout>
            </android.support.v7.widget.CardView>
</layout>